    <application
        android:name=".LifeManagerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".controllerRemind.RemindActivity">

        </activity>
        <activity android:name=".controllerRemind.AddRemindActivity">

        </activity>
        <receiver android:name=".receiverAlarm.MyBroadcastReceiver" >
        </receiver>
        <receiver android:name=".receiverAlarm.MyBroadcastReceiver2" >
        </receiver>

    </application>

</manifest>