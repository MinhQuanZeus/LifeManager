<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/et_title1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textCursorDrawable="@null"
        android:textIsSelectable="true"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/description1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <EditText
        android:id="@+id/description1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textCursorDrawable="@null"
        android:textSize="24sp"
        tools:layout_editor_absoluteY="68dp"
        tools:layout_editor_absoluteX="83dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/calendar_icon"
        tools:layout_editor_absoluteY="118dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/et_date1"
        android:gravity="center|left"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textIsSelectable="true"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="25dp"
        tools:layout_editor_absoluteY="125dp"
        android:layout_marginStart="24dp" />

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/clock_icon"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/et_time1"
        android:gravity="center|left"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:autoText="false"
        android:contextClickable="true"
        android:elegantTextHeight="true"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/et_date1"
        app:layout_constraintLeft_toRightOf="@+id/imageView31"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="24dp" />

    <ImageView
        android:id="@+id/iv_record1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView31"
        app:srcCompat="@drawable/record"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/et_record"
        android:gravity="center|left"
        android:hint="Your record"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="-2dp"
        android:autoText="true"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/et_time1"
        app:layout_constraintLeft_toRightOf="@+id/iv_record1"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="Title"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text="Description"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.06" />

</android.support.constraint.ConstraintLayout>
